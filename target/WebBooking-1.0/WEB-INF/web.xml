<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>resourceBundle.path</param-name>
        <param-value>i18n.messages</param-value>
    </context-param>
    <context-param>
        <param-name>
            javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL
        </param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.html</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>LoginPage</display-name>
        <web-resource-collection>
            <web-resource-name>LoginPage</web-resource-name>
            <description/>
            <url-pattern>/faces/login/formLogin.xhtml</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Accounts</display-name>
        <web-resource-collection>
            <web-resource-name>Accounts</web-resource-name>
            <description/>
            <url-pattern>/faces/account/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AccountUserDetails</display-name>
        <web-resource-collection>
            <web-resource-name>AccountUserDetails</web-resource-name>
            <description/>
            <url-pattern>/faces/account/szczegolyMojegoKonta.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>AccountUserChangePassword</web-resource-name>
            <description/>
            <url-pattern>/faces/account/zmienMojeHaslo.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Uzytkownik</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Register</display-name>
        <web-resource-collection>
            <web-resource-name>RegisterUser</web-resource-name>
            <description/>
            <url-pattern>/faces/account/rejestrujUzytkownika.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>RegisterUserConfirm</web-resource-name>
            <description/>
            <url-pattern>/faces/account/rejestrujUzytkownikaPotwierdz.xhtml</url-pattern>
        </web-resource-collection>               
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Lab</display-name>
        <web-resource-collection>
            <web-resource-name>Lab</web-resource-name>
            <description/>
            <url-pattern>/faces/lab/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Uzytkownik</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>  
    <security-constraint>
        <display-name>LabCRUD</display-name>
        <web-resource-collection>
            <web-resource-name>LabCreateAdmin</web-resource-name>
            <description/>
            <url-pattern>/faces/lab/createLab.xhtml</url-pattern>
        </web-resource-collection>        
        <web-resource-collection>
            <web-resource-name>LabEditAdmin</web-resource-name>
            <description/>
            <url-pattern>/faces/lab/editLab.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>LabDeleteAdmin</web-resource-name>
            <description/>
            <url-pattern>/faces/lab/deleteLab.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>   
         
    <security-constraint>
        <display-name>Equipment</display-name>
        <web-resource-collection>
            <web-resource-name>Equipment</web-resource-name>
            <description/>
            <url-pattern>/faces/equipment/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Uzytkownik</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>EquipmentCRUD</display-name>
        <web-resource-collection>
            <web-resource-name>EquipmentCreate</web-resource-name>
            <description/>
            <url-pattern>/faces/equipment/createEquipment.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>CreateEquipmentInLabAdmin</web-resource-name>
            <description/>
            <url-pattern>/faces/lab/createEquipmentInLab.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>EquipmentEdit</web-resource-name>
            <description/>
            <url-pattern>/faces/equipment/editEquipment.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>EquipmentDelete</web-resource-name>
            <description/>
            <url-pattern>/faces/equipment/deleteEquipment.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>   
    
    <security-constraint>
        <display-name>EquipmentComponents</display-name>
        <web-resource-collection>
            <web-resource-name>EquipmentComponents</web-resource-name>
            <description/>
            <url-pattern>/faces/equipmentComponent/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Uzytkownik</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>EquipmentComponentsCRUD</display-name>
        <web-resource-collection>
            <web-resource-name>EquipmentComponentsCreate</web-resource-name>
            <description/>
            <url-pattern>/faces/equipmentcomponent/createEquipmentComponents.xhtml</url-pattern>
        </web-resource-collection>
         <web-resource-collection>
            <web-resource-name>EquipmentComponentsEdit</web-resource-name>
            <description/>
            <url-pattern>/faces/equipmentcomponent/editEquipmentComponents.xhtml</url-pattern>
        </web-resource-collection>
         <web-resource-collection>
            <web-resource-name>EquipmentComponentsDelete</web-resource-name>
            <description/>
            <url-pattern>/faces/equipmentcomponent/deleteEquipmentComponents.xhtml</url-pattern>
        </web-resource-collection>        
        <auth-constraint>
            <description/>            
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Reservation</display-name>
        <web-resource-collection>
            <web-resource-name>Reservation</web-resource-name>
            <description/>
            <url-pattern>/faces/reservation/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Uzytkownik</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ReservationCreate</display-name>
        <web-resource-collection>
            <web-resource-name>ReservationCreate</web-resource-name>
            <description/>
            <url-pattern>/faces/reservation/createEquipmentReservation.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Uzytkownik</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>BookingLab</display-name>
        <web-resource-collection>
            <web-resource-name>BookingLab</web-resource-name>
            <description/>
            <url-pattern>/faces/timetable/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Uzytkownik</role-name>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>     
    <security-constraint>
        <display-name>BookingLabCreate</display-name>
        <web-resource-collection>
            <web-resource-name>BookingLabCreate</web-resource-name>
            <description/>
            <url-pattern>/faces/timetable/createBookingLab.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>fileBooking</realm-name>
        <form-login-config>
            <form-login-page>/faces/login/formLogin.xhtml</form-login-page>
            <form-error-page>/faces/login/formLoginError.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Uzytkownik</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Administrator</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/faces/error/error403.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/faces/error/error404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/faces/error/error.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/faces/error/error.xhtml</location>
    </error-page>
       <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/faces/error/error.xhtml</location>
    </error-page>
</web-app>
